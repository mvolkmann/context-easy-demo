{
  "name": "context-easy-demo",
  "version": "0.1.0",
  "scripts": {
    "build": "react-scripts build",
    "format": "prettier --write 'src/**/*.{js,scss}'",
    "lint": "eslint --quiet src --ext .js",
    "prepush": "npm run verify",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test-no-watch": "cross-env CI=true react-scripts test --env=jsdom",
    "verify": "npm-run-all format lint test-no-watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "context-easy": "^0.9.11",
    "node-sass": "^4.11.0",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0",
    "react-scripts": "2.1.3"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint-plugin-html": "^5.0.0",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.1",
    "react-testing-library": "^5.4.4"
  }
}
